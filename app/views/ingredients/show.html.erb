<div class="row">
  <div class="span4 offset2" id="show_ingredient_cont">
    <div><h2><%= link_to(@ingredient.name, @ingredient) %></h2></div>
    <div>Measurement: <%= @ingredient.measurement %></div>
     <div>Cost: <%= number_to_currency(@ingredient.cost) %></div>
    <div><%= link_to("Delete", @ingredient, :method => :delete, :confirm => "Are you sure you want to delete this?") %></div>
    <div><%= link_to("Edit", edit_ingredient_path, :method=>:get) %></div>
  </div>
  <div class="span6">
    <div class="img_div"><%= image_tag(@ingredient.image) %></div>
  </div>
</div>

<div class="row" class="show_row">
  <h3>Recipes: </h3>
  <% @ingredient.recipes.each do |recipe| %>
    <div class="span3" id="rec_ing_show">
      <div><%= recipe.name %></div>
      <div id="show_rec_img"><%= image_tag(recipe.image)%></div>
    </div>
  <% end %>
</div>
