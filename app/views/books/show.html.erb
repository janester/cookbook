<div class="row">
  <div class="span4 offset2" id="show_book_cont">
    <div><h2><%= link_to(@book.title, @book) %></h2></div>
    <div>Cuisine: <%= @book.cuisine %></div>
    <div>Chef: <%= @book.chef %></div>
    <div><%= link_to("Delete", @book, :method => :delete, :confirm => "Are you sure you want to delete this?") %></div>
    <div><%= link_to("Edit", edit_book_path, :method=>:get) %></div>
  </div>
  <div class="span6">
    <div class="img_div"><%= image_tag(@book.cover) %></div>
  </div>
</div>






<div class="row" class="show_row">
  <h3>Recipes: </h3>
</div>
<% @book.recipes.each do |recipe| %>
<div class="row" id="row_book_show">
  <div class="span4">
    <div><h4><%= recipe.name%><h4></div>
    <div class="recipes_img"><%= image_tag(recipe.image)%></div>
  </div>
  <div class="span8" id="ing_book_big">
    <h3>Ingredients: </h3>
    <% recipe.ingredients.each do |ingredient| %>
      <div id="ing_book_show">
        <div><%= ingredient.name %></div>
        <div><%= image_tag(ingredient.image)%></div>
      </div>

    <% end %>
  </div>
</div>
<%end%>






<div class="recipes_container">

    <div class="recipe_container">

      <ul>

          <div class="ingredients_cont">

              <div class="ing_sub_cont">

              </div>

          </div>
      </ul>
    </div>

</div>

